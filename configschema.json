{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "google": {
            "type": "object",
            "properties": {
                "apiKey": {
                    "type": "string",
                    "default": "Google API key for interacting with spreadsheet."
                },
                "spreadsheetUri": {
                    "type": "string",
                    "default": "Spreadsheet URI for repositories."
                }
            },
            "required": [
                "apiKey", "spreadsheetUri"
            ]
        }
    },
    "required": [
        "google"
    ]
}